<div id="arena">
</div>
<script type="text/javascript">
  var config = {
    type: Phaser.AUTO,
    width: 900,
    height: 600,
    physics: {
      default: 'arcade',
      arcade: {
        gravity: { y: 300 },
        debug: false
      }
    },
    scene: {
      preload: preload,
      create: create,
      update: update
    }
  };

  var game = new Phaser.Game(config);

  function preload ()
  {
    this.load.image('stage', '<%= image_path('chikara-temple.jpg')%>');
  }

  function create ()
  {
    this.add.image(450,300, 'stage').setScale(.25, .2);
  }

  function update ()
  {
  }
</script>
